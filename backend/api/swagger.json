                  },
                  "actualStartTime": {
                    "type": "string",
                    "format": "date-time",
                    "description": "实际开始时间"
                  },
                  "actualEndTime": {
                    "type": "string",
                    "format": "date-time",
                    "description": "实际结束时间"
                  },
                  "content": {
                    "type": "string",
                    "description": "上课内容"
                  },
                  "homework": {
                    "type": "string",
                    "description": "作业"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "创建成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BaseResponse"
                }
              }
            }
          }
        }
      }
    },
    "/deduction/manual": {
      "post": {
        "summary": "手动扣课",
        "description": "手动为学生扣减课时",
        "tags": ["扣课管理"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "studentId": {
                    "type": "integer",
                    "description": "学生ID"
                  },
                  "courseId": {
                    "type": "integer",
                    "description": "课程ID"
                  },
                  "deductionAmount": {
                    "type": "number",
                    "description": "扣课数量"
                  },
                  "remark": {
                    "type": "string",
